<Manager>:
    MainMenu:
        name: 'mainMenu'
    TeamRegisterMenu:
        name: 'teamRegisterMenu'
    StudentRegisterMenu:
        name: 'studentRegisterMenu'

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: teamRegisterButton
            text: 'Registrar uma nova turma'
            font_size: 60
            on_release: app.root.current = 'teamRegisterMenu'
            on_release: app.root.get_screen('teamRegisterMenu').update()
        Button:
            id: studentRegisterButton
            text: 'Registrar um novo aluno'
            font_size: 60
            on_release: app.root.current = 'studentRegisterMenu'
            on_release: app.root.get_screen('studentRegisterMenu').update()
        Button:
            id: exitButton
            text: 'Sair'
            font_size: 60
            on_release: app.root.get_screen('studentRegisterMenu').update()
            on_release: app.root.get_screen('teamRegisterMenu').update()
            on_release: app.stop()

<TeamRegisterMenu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastro de Turmas'
                    app_icon: 'Icons/backbuttonicon.png'
                    on_release: app.root.current = 'mainMenu'
                    on_release: app.root.get_screen('teamRegisterMenu').update()
                ActionButton:
                    text: 'Sair'
                    icon: 'Icons/exiticon.png'
                    on_release: app.root.get_screen('studentRegisterMenu').update()
                    on_release: app.root.get_screen('teamRegisterMenu').update()
                    on_release: app.stop()
        BoxLayout:
            id: courseTypeInputBox
            Label:
                id: courseTypeInputLabel
                text: 'Tipo de Curso'
            Spinner:
                id: courseTypeInput
                values: root.get_items_course_type()
                text: self.values[0]
        BoxLayout:
            id: courseShiftInputBox
            Label:
                id: courseShiftInputLabel
                text: 'Turno'
            Spinner:
                id: courseShiftInput
                values: root.get_items_course_shift()
                text: self.values[0]
        BoxLayout:
            id: courseStartDateInputBox
            Label:
                id: courseStartDateInputLabel
                text: 'Data de Início (DD/MM/AAA)'
            TextInput:
                id: courseStartDateInput
        BoxLayout:
            Button:
                text: 'Registrar'
                on_release: root.team_register()

<StudentRegisterMenu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastro de Alunos'
                    app_icon: 'Icons/backbuttonicon.png'
                    on_release: app.root.current = 'mainMenu'
                    on_release: app.root.get_screen('studentRegisterMenu').update()
                ActionButton:
                    text: 'Sair'
                    icon: 'Icons/exiticon.png'
                    on_release: app.root.get_screen('studentRegisterMenu').update()
                    on_release: app.root.get_screen('teamRegisterMenu').update()
                    on_release: app.stop()
        BoxLayout:
            Label:
                id: nameInputLabel
                text: 'Nome:'
            TextInput:
                id: nameInput
        BoxLayout:
            Label:
                id: birthDateInputLabel
                text: 'Data de nascimento (dd/mm/aaaa)'
            TextInput:
                id: birthDateInput
        BoxLayout:
            Label:
                id: modelTypeInputLabel
                text: 'Tipo de Modelo'
            Spinner:
                id: modelTypeInput
                values: root.get_items_model_type()
                text: self.values[0]
        BoxLayout:
            Label:
                id: isGraduatedInputLabel
                text: 'Graduado?'
            Spinner:
                id: isGraduatedInput
                values: root.get_items_is_graduated()
                text: self.values[0]
        BoxLayout:
            Label:
                id: paymentSituationInputLabel
                text: 'Situação do pagamento'
            Spinner:
                id: paymentSituationInput
                values: root.get_items_payment_situation()
                text: self.values[0]
        BoxLayout:
            Label:
                id: teamNameInputLabel
                text: 'Nome da Turma'
            Spinner:
                id: teamNameInput
                values: root.get_team_names()
                text: self.values[0]
        BoxLayout:
            Button:
                text: 'Registrar'
                on_release: root.student_register()