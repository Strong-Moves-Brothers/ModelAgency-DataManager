<Manager>:
    MainMenu:
        name: 'mainMenu'
    TeamRegisterMenu:
        name: 'teamRegisterMenu'
    StudentRegisterMenu:
        name: 'studentRegisterMenu'
    DatabaseRegisterMenu:
        name: 'databaseRegisterMenu'

<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 200
        spacing: 25
        Button:
            id: teamRegisterButton
            text: 'Registrar uma nova turma'
            font_size: 25
            on_release: app.root.current = 'teamRegisterMenu'
            on_release: app.root.get_screen('teamRegisterMenu').update()
        Button:
            id: studentRegisterButton
            text: 'Registrar um novo aluno'
            font_size: 25
            on_release: app.root.current = 'studentRegisterMenu'
            on_release: app.root.get_screen('studentRegisterMenu').update()
        Button:
            id: databaseRegisterButton
            text: 'Registrar Banco de Dados'
            font_size: 25
            on_release: app.root.current = 'databaseRegisterMenu'
        Button:
            id: exitButton
            text: 'Sair'
            font_size: 25
            on_release: app.exit()

<TeamRegisterMenu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastro de Turmas'
                    app_icon: 'Icons/backbuttonicon.png'
                    on_release: app.root.current = 'mainMenu'
                    on_release: app.root.get_screen('teamRegisterMenu').update()
                ActionButton:
                    text: 'Sair'
                    icon: 'Icons/exiticon.png'
                    on_release: app.exit()
        BoxLayout:
            id: courseTypeInputBox
            Label:
                id: courseTypeInputLabel
                text: 'Tipo de Curso'
            Spinner:
                id: courseTypeInput
                values: root.get_items_course_type()
                text: self.values[0]
        BoxLayout:
            id: courseShiftInputBox
            Label:
                id: courseShiftInputLabel
                text: 'Turno'
            Spinner:
                id: courseShiftInput
                values: root.get_items_course_shift()
                text: self.values[0]
        BoxLayout:
            id: courseStartDateInputBox
            Label:
                id: courseStartDateInputLabel
                text: 'Data de Início (DD/MM/AAA)'
            DateInput:
                id: courseStartDateInput
        BoxLayout:
            Button:
                text: 'Registrar'
                on_release: root.team_register()

<StudentRegisterMenu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastro de Alunos'
                    app_icon: 'Icons/backbuttonicon.png'
                    on_release: app.root.current = 'mainMenu'
                    on_release: app.root.get_screen('studentRegisterMenu').update()
                ActionButton:
                    text: 'Sair'
                    icon: 'Icons/exiticon.png'
                    on_release: app.exit()
        BoxLayout:
            Label:
                id: nameInputLabel
                text: 'Nome:'
            TextInput:
                id: nameInput
        BoxLayout:
            Label:
                id: birthDateInputLabel
                text: 'Data de nascimento (dd/mm/aaaa)'
            DateInput:
                id: birthDateInput
        BoxLayout:
            Label:
                id: modelTypeInputLabel
                text: 'Tipo de Modelo'
            Spinner:
                id: modelTypeInput
                values: root.get_items_model_type()
                text: self.values[0]
        BoxLayout:
            Label:
                id: isGraduatedInputLabel
                text: 'Graduado?'
            Spinner:
                id: isGraduatedInput
                values: root.get_items_is_graduated()
                text: self.values[0]
        BoxLayout:
            Label:
                id: paymentSituationInputLabel
                text: 'Situação do pagamento'
            Spinner:
                id: paymentSituationInput
                values: root.get_items_payment_situation()
                text: self.values[0]
        BoxLayout:
            Label:
                id: teamNameInputLabel
                text: 'Nome da Turma'
            Spinner:
                id: teamNameInput
        BoxLayout:
            Button:
                text: 'Registrar'
                on_release: root.student_register()

<DatabaseRegisterMenu>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Cadastrar Banco de Dados'
                    app_icon: 'Icons/backbuttonicon.png'
                    on_release: app.root.current = 'mainMenu'
                ActionButton:
                    text: 'Sair'
                    icon: 'Icons/exiticon.png'
                    on_release: app.exit()
        BoxLayout:
            Label:
                text: 'Host:'
            TextInput:
                id: hostInput
                text: ''
        BoxLayout:
            Label:
                text: 'Usuário:'
            TextInput:
                id: userInput
                text: ''
        BoxLayout:
            Label:
                text: 'Porta:'
            TextInput:
                id: portInput
                text: ''
        BoxLayout:
            Label:
                text: 'Senha:'
            TextInput:
                id: passwordInput
                text: ''
        BoxLayout:
            Label:
                text: 'Banco:'
            TextInput:
                id: databaseInput
                text: ''
        BoxLayout
            Button:
                text: 'Registrar'
                on_press: app._call_database_register(root.ids.hostInput.text, root.ids.userInput.text, root.ids.portInput.text, root.ids.passwordInput.text, root.ids.databaseInput.text)
                on_release: app.root.get_screen('studentRegisterMenu').generate_cache()